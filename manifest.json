{
	"name": "Menagerie",
	"version": "1.0.1",
	"description": "A companion extension to the Menagerie project, enabling you to import media by right clicking on it.",
	"permissions": [
		"declarativeContent",
		"storage",
		"contextMenus",
		"http://localhost/"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},
	"icons": {
		"16": "images/menagerie16.png",
		"32": "images/menagerie32.png",
		"48": "images/menagerie48.png",
		"128": "images/menagerie128.png"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval' https://ajax.googleapis.com; object-src 'self'",
	"manifest_version": 2
}
